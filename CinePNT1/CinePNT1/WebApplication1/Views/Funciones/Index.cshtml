@model IEnumerable<WebCineMVC.Models.Funcion>
    
@{
    ViewData["Title"] = "Funciones";
}

<div class="Titulo">
    Función
</div>

<form asp-action="Create">
    <div class="form-group">
        <input type="submit" asp-action="Create" value="Agregar nueva función" class="btn btn-success btn-lg" />
    </div>
</form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sala)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pelicula)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sala.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pelicula.Nombre)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
  