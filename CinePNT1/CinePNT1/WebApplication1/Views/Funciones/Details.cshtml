@model WebCineMVC.Models.Funcion

@{
    ViewData["Title"] = "Detalle de Función";
}



<div class="Titulo">Detalle de la función</div><br />

<div class="movieDetails">

    <dl class="row">
        <dt class="col-sm-12">
            <u>@Html.DisplayNameFor(model => model.Fecha)</u>
        </dt>
        <dd class="col-sm-12">
               @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-12">
            <u>@Html.DisplayNameFor(model => model.Sala)</u>
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.Sala.Numero)
        </dd>
        <dt class="col-sm-12">
            <u>@Html.DisplayNameFor(model => model.Pelicula)</u>
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.Pelicula.Nombre)
        </dd>
        <dt class="col-sm-12">
            <u>@Html.DisplayNameFor(model => model.TicketsDisponibles)</u>
                        @*@ViewData["tickets"]*@
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.TicketsDisponibles)
        </dd>
    </dl>

    <div>
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
        <a class="btn btn-primary" asp-action="Index">Volver al listado</a>
    </div>
</div>

