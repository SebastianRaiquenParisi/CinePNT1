@model WebCineMVC.Models.Funcion

@{
    ViewData["Title"] = "Editar Función";
}

<div class="Titulo">Editar función</div>


<div class="movieElect">
    
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label class="subForms">Fecha</label>
                    <input asp-for="Fecha" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="subForms">Sala</label>
                    <select asp-for="SalaId" class="form-control" asp-items="ViewBag.SId">
                        <option selected="selected" value="">Seleccionar</option> 
                    </select>
                    <span asp-validation-for="SalaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="subForms">Película</label>
                    <select asp-for="PeliculaId" class="form-control" asp-items="ViewBag.PelId">
                        <option selected="selected" value="">Seleccionar</option>
                    </select>
                    <span asp-validation-for="PeliculaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </form>
 </div>

<div class="botonRetorno">
    <a asp-action="Index"><input type="submit" value="Volver al listado" class="btn btn-primary" /></a>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
