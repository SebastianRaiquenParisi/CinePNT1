@model WebCineMVC.Models.Pelicula

@{
    ViewData["Title"] = "Agregar Pelicula";
}

<div class="Titulo">Crear nueva película</div>

<div class="movieElect">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="subForms">Nombre</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="subForms">Duración</label>
            <input asp-for="Duracion" class="form-control" />
            <span asp-validation-for="Duracion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Agregar" class="btn btn-primary" />
        </div>
    </form>
</div>

<form class="botonRetorno" asp-action="Index">
    <input type="submit" value="Volver al listado" class="btn btn-primary" />
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
