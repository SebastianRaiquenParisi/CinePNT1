@model WebCineMVC.Models.Compra

@{
    ViewData["Title"] = "ComprarEntradas";
}

<h1>Comprar entradas</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dni" class="control-label"></label>
                <input asp-for="Dni" class="form-control" />
                <span asp-validation-for="Dni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuncionId" class="control-label"></label>
                <select asp-for="FuncionId" class="form-control" asp-items="ViewBag.FuncionId">Elija una función</select>
            </div>
            <div class="form-group">
                <label asp-for="CantidadDeEntradas" class="control-label"></label>
                <input asp-for="CantidadDeEntradas" class="form-control" />
                <span asp-validation-for="CantidadDeEntradas" class="text-danger"></span>
                @ViewData["ErrorTicketsInsuficientes"]
            </div>
            <div class="form-group">
                <input type="submit" value="Comprar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

